<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<!-- Crate sequence -->
        <record id="sequence_chatarra_unit_reposicion_type" model="ir.sequence.type">
            <field name="name">Numero de Reposicion</field>
            <field name="code">reposicion.sequence.number</field>
        </record>
        <record id="sequence_unit_reposicion_number" model="ir.sequence">
            <field name="name">Numero de Reposicion</field>
            <field name="code">reposicion.sequence.number</field>
            <field name="prefix">R</field>
            <field name="padding">4</field>
        </record>
        <!-- Accion Form Reposicion -->
        <record id='action_chatarra_unidad_reposicion' model='ir.actions.act_window'>
            <field name='name'>Reposicion</field>
            <field name='res_model'>chatarra.unit.reposicion</field>
            <field name='view_type'>form</field>
            <field name='target'>new</field>
            <field name='view_mode'>form</field>
        </record>
        <!-- Search View chatarra.unit -->
        <record id="chatarra_unit_search" model="ir.ui.view">
            <field name="name">chatarra.unit.search</field>
            <field name="model">chatarra.unit</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Unidades">
                   <filter string="Disponibles" icon="terp-gtk-media-pause" domain="[('state','=','disponible')]"/>
                   <filter string="Borrador" icon="terp-gtk-media-pause" domain="[('state','=','borrador')]"/>
                   <filter string="Asignada" icon="terp-gtk-media-pause" domain="[('state','=','asignada')]"/>
                   <filter string="Enviada a SCT" icon="terp-gtk-media-pause" domain="[('state','=','enviado')]"/>
                   <separator orientation="vertical"/>
                   <group  expand='0' string='Agrupar por...'>
                       <filter string='Estado' icon="terp-gdu-smart-failing" domain="[]" context="{'group_by' : 'state'}" />
                   </group>
                </search>
            </field>
        </record>
        <!-- Vista de Arbol para Chatarras -->
    	<record model='ir.ui.view' id='chatarra_unit_tree'>
			<field name='name'>chatarra_unit.tree</field>
			<field name='model'>chatarra.unit</field>
			<field name='type'>tree</field>
			<field name='arch' type='xml'>
				<tree string='Chatarras' 
                    colors="gray:state=='reposicion';red:state=='borrador';green:state=='asignada';blue:state=='disponible';">
					<field name='vat'/>
                    <field name='name'/>
					<field name='serie'/>
                    <field name='state'/>
                    <button name="action_disponible" states="borrador" string="Disponible" type="object" icon="gtk-go-forward"/>
                    <button name="action_completo" states="asignada" string="Expediente Completo" type="object" icon="gtk-apply" class="oe_highlight"/>
				</tree>
			</field>
		</record>
    	<!-- Vista de Formulario para Chatarras -->
    	<record model='ir.ui.view' id='chatarra_unit_form'>
    		<field name='name'>chatarra_unit.form</field>
    		<field name='model'>chatarra.unit</field>
    		<field name='type'>form</field>
    		<field name='arch' type='xml'>
    			<form string='Lista de Unidades'>
                    <header>
                        <button name="action_disponible" states="borrador" string="Disponible" type="object" icon="gtk-apply" class="oe_highlight"/>
                        <button name="action_completo" states="asignada" string="Expediente Completo" type="object" icon="gtk-apply" class="oe_highlight"/>
                        <button  name="%(action_chatarra_unidad_reposicion)d" states="asignada" string="Reponer" type="action" icon="gtk-apply" class="oe_highlight" context="{'default_unidad_anterior_id': active_id,}"/>
                        <field name='state' widget="statusbar" statusbar_visible="borrador,disponible,asignada,reposicion"/>
                    </header>
    				<sheet>
    					<h1>
    						<label string='Catalogo de Unidades'/>
    					</h1>
    					<group col='4'>
    						<field name='name'/>
    						<field name='propietario_id' on_change='onchange_vat(propietario_id)'/>
    						<field name='vat'/>
    					</group>
    					<notebook>
    						<page string='Datos de la Unidad'>
    							<group col='4'>
 									<field name='serie'/>
 									<field name='marca' widget='selection'/>
 									<field name='clase'/>
 									<field name='tipo' widget='selection'/>
 									<field name='motor'/>
                                    <field name='color_placa'/>
                                    <field name='tipo_placa'/>
 									<field name='combustible'/>
 									<field name='peso_vehicular'/>
                                    <field name='modelo'/>
                                    <field name='reg_fed'/>
                                    <field name='modalidad'/>
                                    <field name='no_ejes'/>
                                    <field name='no_llantas'/>
                                    <field name='cap_litros'/>                                
                                    <field name='cap_toneladas'/>
                                    <field name='cap_personas'/>
                                    <field name='alto'/>
                                    <field name='ancho'/>
                                    <field name='largo'/>
                                    <field name='eje_direccional'/>
                                    <field name='eje_motriz'/>
                                    <field name='eje_carga'/>
                                    <field name='permiso_ruta'/>                  
                                    <field name='lugar_exp'/>
                                    <field name='fecha_exp'/>
                                </group>
    						</page>
                            <page string='Documentacion' attrs="{'invisible': [('state','in','borrador')]}">
                                <group>
                                    <separator string="Documentos" coslpan="4"/>
                                    <field name='document_ids' colspan="4" nolabel="1" context="{'default_unit_id': active_id,}">
                                        <tree string='Documentacion'>
                                            <field name='name'/>
                                            <field name='unit_id' readonly="True"/>
                                            <field name='state'/>
                                            <button name="action_completo" states="pendiente" string="Completo" type="object" icon="gtk-apply"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string='Log'>
                                <group col='4'>
                                    <field name='disponible_por'/>
                                    <field name='fecha_disponible'/>
                                    <field name='asignada_por'/>
                                    <field name='fecha_asignada'/>
                                    <field name='facturado_por'/>
                                    <field name='fecha_facturado'/>
                                    <field name='completo_por'/>
                                    <field name='fecha_completo'/>
                                    <field name='enviado_por'/>
                                    <field name='fecha_enviado'/>
                                    <field name='reposicion_por'/>
                                    <field name='fecha_reposicion'/>
                                    <field name='repuesta_id'/>
                                    <field name='sustituye_id'/>
                                    <field name='asignacion_id'/>
                                    <field name='reposicion_id'/>
                                    <field name='facturado'/>
                                    <field name='factura_id'/>
                                </group>
                            </page>
    					</notebook>
    				</sheet>
    			</form>
    		</field>
    	</record>
    	<!-- Vista de Arbol de Marcas -->
    	<record model='ir.ui.view' id='chatarra_marca_tree'>
    		<field name='name'>chatarra_marca.tree</field>
    		<field name='model'>chatarra.marca</field>
    		<field name='type'>tree</field>
    		<field name='arch' type='xml'>
    			<tree string='Marcas' editable='bottom'>
    				<field name='name'/>
    				<field name='active'/>
    			</tree>
    		</field>
    	</record>
    	<!-- Vista de Arbol de Tipo -->
    	<record model='ir.ui.view' id='chatarra_tipo_tree'>
    		<field name='name'>chatarra_tipo.tree</field>
    		<field name='model'>chatarra.tipo</field>
    		<field name='type'>tree</field>
    		<field name='arch' type='xml'>
    			<tree string='Tipos' editable='buttom'>
    				<field name='name'/>
    				<field name='active'/>
    			</tree>
    		</field>
    	</record>
        <!-- Vista formulario Reposicion -->
        <record model='ir.ui.view' id='chatarra_unit_reposicion_form'>
            <field name='name'>chatarra_unit_reposicion.form</field>
            <field name='model'>chatarra.unit.reposicion</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string='Guia'>
                    <header>
                     <button name="action_reposicion" string="Reponer" type="object" icon="gtk-apply" class="oe_highlight"/>   
                    </header>
                    <sheet>
                        <h1>
                            <label string='Reposicion'/>
                        </h1>
                        <group col='4'>
                            <field name='motivo' widget='selection'/>
                            <field name='date'/>
                            <field name='unidad_nueva_id' domain="[
                                                            ('name','!=', unidad_anterior_id),
                                                            ('state','=','disponible'),
                                                            ('sustituye_id','=', False)
                                                            ]"/>
                            <field name='unidad_anterior_id'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Vista de Arbol Reposicion -->
        <record model='ir.ui.view' id='chatarra_unit_reposicion_tree'>
            <field name='name'>chatarra_unit_reposicion.tree</field>
            <field name='model'>chatarra.unit.reposicion</field>
            <field name='type'>tree</field>
            <field name='arch' type='xml'>
                <tree string='Reposiciones'>
                    <field name='name'/>
                    <field name='unidad_anterior_id'/>
                    <field name='unidad_nueva_id'/>
                    <field name='date'/>
                    <field name='motivo'/>
                </tree>
            </field>
        </record>
        <!-- SEARCH View  --> 
        <record id="chatarra_unit_reposicion_search" model="ir.ui.view">
            <field name="name">chatarra.unit.reposicion.search</field>
            <field name="model">chatarra.unit.reposicion</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Reposiciones">
                   <filter string="Del Mes" icon="terp-gtk-media-pause" domain="[('date','&gt;=', time.strftime('%%Y-%%m-01'))]" name="this_month"/>
                   <separator orientation="vertical"/>
                   <group  expand='1' string='Agrupar por...'>
                       <filter  string="Year"
                                name="Year"
                                domain="[('date','&lt;=', time.strftime('%%Y-%%m-%%d')),('date','&gt;=',time.strftime('%%Y-01-01'))]"
                                help="This Year" 
                                context="{'group_by':'date'}"/>
                        <filter string="Mes"
                                name="mes"
                                domain="[('date','&lt;=',(context_today()+relativedelta(day=31)).strftime('%%Y-%%m-%%d')),('date','&gt;=',(context_today()-relativedelta(day=1)).strftime('%%Y-%%m-%%d'))]"
                                help="Este Mes" 
                                context="{'group_by':'date'}"/>
                        <filter string="Semana"
                                separator="1"
                                name="semana"
                                domain="[('date','&lt;=', (context_today() + relativedelta(weeks=0,day=7, weekday=-1)).strftime('%%Y-%%m-%%d')),('date','&gt;=',(context_today() - relativedelta(weeks=1, weekday=0)).strftime('%%Y-%%m-%%d'))]"
                                help="Esta Semana" 
                                context="{'group_by':'date'}"/>
                   </group>
                </search>
            </field>
        </record>
        <!-- Vista de Arbol de Motivo de Reposicion -->
        <record model='ir.ui.view' id='chatarra_motivo_tree'>
            <field name='name'>chatarra_motivo.tree</field>
            <field name='model'>chatarra.motivo</field>
            <field name='type'>tree</field>
            <field name='arch' type='xml'>
                <tree string='Motivo de Reposicion' editable='buttom'>
                    <field name='name'/>
                    <field name='active'/>
                </tree>
            </field>
        </record>
        <!-- Menu Chatarra-->
        <menuitem id="chatarra_menu" name="Chatarra"/>
        <!-- Menu Chatarra/Unidades -->
        <menuitem id="chatarra_list_menu" name="Unidades" parent="chatarra_menu"/>
        <!-- Menu Chatarra/Configuracion -->
        <menuitem id="chatarra_config_menu" name="Configuracion" parent="chatarra_menu"/>
       <!-- Accion Chatarra/Unidades/Unidades -->
        <record id='action_chatarra_list' model='ir.actions.act_window'>
        	<field name='name'>Lista de Chatarras</field>
        	<field name='res_model'>chatarra.unit</field>
        	<field name='view_type'>form</field>
        	<field name='view_mode'>tree,form</field>
        </record>
        <!-- Accion Chatarra/Unidades/Reposiciones -->
        <record id='action_chatarra_reposiciones' model='ir.actions.act_window'>
            <field name='name'>Reposiciones</field>
            <field name='res_model'>chatarra.unit.reposicion</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree</field>
        </record>
        <!-- Menu Chatarra/Unidades/Unidades Disponibles -->
        <menuitem id="chatarra_lists_menu" name="Unidades Disponibles" parent="chatarra_list_menu" action="action_chatarra_list" sequence="0"/>
        <!-- Menu Chatarra/Unidades/Reposiciones -->
        <menuitem id="chatarra_reposiciones_menu" name="Reposiciones" parent="chatarra_list_menu" action="action_chatarra_reposiciones"/>
        <!-- Accion Chatarra/Configuracion/Marcas -->
        <record id='action_chatarra_marca' model='ir.actions.act_window'>
        	<field name='name'>Lista de Marcas</field>
        	<field name='res_model'>chatarra.marca</field>
        	<field name='view_type'>form</field>
        	<field name='view_mode'>tree,form</field>
        </record>
        <!-- Menu Chatarra/Configuracion/Marcas -->
        <menuitem id="chatarra_marca_menu" name="Marcas" parent="chatarra_config_menu" action="action_chatarra_marca"/>
        <!-- Accion Chatarra/Configuracion/Tipo -->
        <record id='action_chatarra_tipo' model='ir.actions.act_window'>
        	<field name='name'>Lista de Tipos</field>
        	<field name='res_model'>chatarra.tipo</field>
        	<field name='view_type'>form</field>
        	<field name='view_mode'>tree,form</field>
        </record>
        <!-- Menu Chatarra/Configuracion/Tipos -->
        <menuitem id="chatarra_tipo_menu" name="Tipo" parent="chatarra_config_menu" action="action_chatarra_tipo"/>
        <!-- Accion Chatarra motivo -->
        <record id='action_chatarra_motivo' model='ir.actions.act_window'>
            <field name='name'>Motivo de Reposicion</field>
            <field name='res_model'>chatarra.motivo</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree,form</field>
        </record>
        <!-- Menu Chatarra/Configuracion/Motivo -->
        <menuitem id="chatarra_motivo_menu" name="Motivo de Reposicion" parent="chatarra_config_menu" action="action_chatarra_motivo"/>
    </data>
</openerp>