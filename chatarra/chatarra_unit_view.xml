<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Accion Wizard Tarjeta (Boton en chatarra.unit) -->
        <record id='action_wizard_tarjeta' model='ir.actions.act_window'>
            <field name='name'>Tarjeta</field>
            <field name='res_model'>chatarra.tarjeta</field>
            <field name='view_type'>form</field>
            <field name='target'>new</field>
            <field name='view_mode'>form</field>
        </record>
        <!-- Accion Form Reposicion (Boton en chatarra.unit) -->
        <record id='action_chatarra_reposicion' model='ir.actions.act_window'>
            <field name='name'>Reposicion</field>
            <field name='res_model'>chatarra.reposicion</field>
            <field name='view_type'>form</field>
            <field name='target'>new</field>
            <field name='view_mode'>form</field>
        </record>
        <!-- Accion Form Cita (Boton en chatarra.unit) -->
        <record id='action_chatarra_cita_1' model='ir.actions.act_window'>
            <field name='name'>Cita</field>
            <field name='res_model'>chatarra.cita</field>
            <field name='view_type'>form</field>
            <field name='target'>new</field>
            <field name='view_mode'>form</field>
        </record>
        <!-- Search View chatarra.unit -->
        <record id="chatarra_unit_search" model="ir.ui.view">
            <field name="name">chatarra.unit.search</field>
            <field name="model">chatarra.unit</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Unidades">
                   <filter string="Disponibles" icon="terp-gtk-media-pause" domain="[('state','=','disponible')]"/>
                   <filter string="Borrador" icon="terp-gtk-media-pause" domain="[('state','=','borrador')]"/>
                   <filter string="Asignada" icon="terp-gtk-media-pause" domain="[('state','=','asignada')]"/>
                   <filter string="Enviada a SCT" icon="terp-gtk-media-pause" domain="[('state','=','enviado')]"/>
                   <separator orientation="vertical"/>
                   <group  expand='0' string='Agrupar por...'>
                       <filter string='Estado' icon="terp-gdu-smart-failing" domain="[]" context="{'group_by' : 'state'}" />
                   </group>
                </search>
            </field>
        </record>
        <!-- Vista de Arbol para Chatarras -->
    	<record model='ir.ui.view' id='chatarra_unit_tree'>
			<field name='name'>chatarra_unit.tree</field>
			<field name='model'>chatarra.unit</field>
			<field name='type'>tree</field>
			<field name='arch' type='xml'>
				<tree string='Chatarras' 
                    colors="gray:state=='reposicion';red:state=='borrador';green:state=='asignada';blue:state=='disponible';">
					<field name='vat'/>
                    <field name='name'/>
					<field name='serie'/>
                    <field name='state'/>
                    <button name="action_disponible" states="borrador" string="Disponible" type="object" icon="gtk-go-forward"/>
                    <button name="action_bloqueado" attrs="{'invisible':[('state','!=','recibido')]}" string="Bloqueado" type="object" icon="gtk-dialog-authentication"/>
                    <button name="%(action_chatarra_cita_1)d" states="bloqueado" string="Programar Cita" type="action" icon="stock_calendar" context="{'default_unidad_id': active_id,}"/>
				</tree>
			</field>
		</record>
        <!-- Vista de Arbol para Chatarras Enviadas a SCT -->
        <record model='ir.ui.view' id='chatarra_unit_enviado_sct_tree'>
            <field name='name'>chatarra_unit.tree</field>
            <field name='model'>chatarra.unit</field>
            <field name='type'>tree</field>
            <field name='arch' type='xml'>
                <tree string='Chatarras' 
                    colors="gray:state=='reposicion';red:state=='borrador';green:state=='asignada';blue:state=='disponible';">
                    <field name='client_id'/>
                    <field name='name'/>
                    <field name='serie'/>
                    <field name='secretaria_id'/>
                    <field name='paqueteria_id'/>
                    <field name='guia'/>
                    <field name='consulta'/>
                    <button name="action_recibir_consulta" attrs="{'invisible':['|',('consulta','=',True),('state','!=','enviado')]}" string="Recibir Consulta" type="object" class="oe_highlight" icon="gtk-apply"/>
                    <field name='tarjeta_circulacion'/>
                    <button name="action_recibir_tarjeta" attrs="{'invisible':['|',('tarjeta_circulacion','=',True),('state','!=','enviado')]}" string="Recibir TC" type="object" class="oe_highlight" icon="gtk-apply"/>
                    <field name='copia_tc'/>
                    <button name="%(action_wizard_tarjeta)d" attrs="{'invisible':['|',('copia_tc','=',True),('state','!=','enviado')]}" string="Copia TC" type="action" class="oe_highlight" context="{'default_unit_id': active_id}" icon="gtk-apply"/>
                    <field name='state'/>
                </tree>
            </field>
        </record>
        <!-- Vista de Arbol para Chatarras Cita -->
        <record model='ir.ui.view' id='chatarra_unit_cita_tree'>
            <field name='name'>chatarra_unit.tree</field>
            <field name='model'>chatarra.unit</field>
            <field name='type'>tree</field>
            <field name='arch' type='xml'>
                <tree string='Chatarras'>
                    <field name='vat'/>
                    <field name='name'/>
                    <field name='serie'/>
                    <field name='chatarrera_id'/>
                    <field name='programacion_cita'/>
                    <field name='cita_anterior'/>
                    <field name='state'/>
                    <button name="action_exp_enviado" states="cita" string="Expediente Enviado" type="object" icon="gtk-revert-to-saved" class="oe_highlight"/>
                    <button  name="%(action_chatarra_cita_1)d" states="cita" string="Reprogramar Cita" type="action" icon="stock_calendar" context="{'default_unidad_id': active_id,}"/>
                </tree>
            </field>
        </record>
    	<!-- Vista de Formulario para Chatarras -->
    	<record model='ir.ui.view' id='chatarra_unit_form'>
    		<field name='name'>chatarra_unit.form</field>
    		<field name='model'>chatarra.unit</field>
    		<field name='type'>form</field>
    		<field name='arch' type='xml'>
    			<form string='Lista de Unidades'>
                    <header>
                        <button name="action_disponible" states="borrador" string="Disponible" type="object" icon="gtk-apply" class="oe_highlight"/>
                        <button name="action_recibir_consulta" attrs="{'invisible':['|',('consulta','=',True),('state','!=','enviado')]}" string="Recibir Consulta" type="object" class="oe_highlight"/>
                        <button name="action_recibir_tarjeta" attrs="{'invisible':['|',('tarjeta_circulacion','=',True),('state','!=','enviado')]}" string="Recibir TC" type="object" class="oe_highlight"/>
                        <button name="%(action_wizard_tarjeta)d" attrs="{'invisible':['|',('copia_tc','=',True),('state','!=','enviado')]}" string="Copia TC" type="action" class="oe_highlight" context="{'default_unit_id': active_id}"/>
                        <button name="action_bloqueado" states="recibido" string="Bloqueado" type="object" icon="gtk-dialog-authentication" class="oe_highlight"/>
                        <button  name="%(action_chatarra_cita_1)d" states="bloqueado" string="Programar Cita" type="action" icon="stock_calendar" class="oe_highlight" context="{'default_unidad_id': active_id,}"/>
                        <button name="action_exp_enviado" states="cita" string="Expediente Enviado" type="object" icon="gtk-revert-to-saved" class="oe_highlight"/>
                        <button  name="%(action_chatarra_cita_1)d" states="cita" string="Reprogramar Cita" type="action" icon="stock_calendar" context="{'default_unidad_id': active_id,}"/>
                        <button name="action_chatarrizado" states="exp_enviado" string="Chatarrizado" type="object" icon="gtk-apply" class="oe_highlight"/>
                        <button name="action_certificado" states="chatarrizado" string="Certificado" type="object" icon="gtk-apply" class="oe_highlight"/>
                        <button name="action_baja" states="certificado" string="Baja" type="object" icon="gtk-apply" class="oe_highlight"/>
                        <button name="action_cancelado" states="recibido,enviado_agencia,bloqueado,cita,exp_enviado,chatarrizado,certificado,baja" string="Desestimiento" type="object" icon="gtk-close"/>
                        <button name="%(action_chatarra_reposicion)d" states="recibido,enviado_agencia,bloqueado,cita,exp_enviado,chatarrizado,certificado" string="Desestimiento y Reposicion" type="action" icon="gtk-convert" context="{'default_unidad_anterior_id': active_id,}"/>
                        <button  name="%(action_chatarra_reposicion)d" states="asignada" string="Reponer" type="action" icon="gtk-convert" context="{'default_unidad_anterior_id': active_id,}"/>
                        <button name="send_mail_chatarra" states="disponible" string="Prueba" type="object" icon="gtk-apply" class="oe_highlight"/>
                        <field name='state' widget="statusbar" statusbar_visible="borrador,disponible,asignada,reposicion"/>
                    </header>
    				<sheet>
    					<h1>
    						<label string='Catalogo de Unidades'/>
    					</h1>
    					<group col='4'>
    						<field name='name'/>
    						<field name='propietario_id' on_change='onchange_vat(propietario_id)'/>
    						<field name='vat'/>
                            <field name='client_id'/>
    					</group>
    					<notebook>
    						<page string='Datos de la Unidad'>
    							<group col='4'>
 									<field name='serie'/>
 									<field name='marca' widget='selection'/>
 									<field name='clase'/>
 									<field name='tipo' widget='selection'/>
 									<field name='motor'/>
                                    <field name='color_placa'/>
                                    <field name='tipo_placa'/>
 									<field name='combustible'/>
 									<field name='peso_vehicular'/>
                                    <field name='modelo'/>
                                    <field name='reg_fed'/>
                                    <field name='modalidad'/>
                                    <field name='no_ejes'/>
                                    <field name='no_llantas'/>
                                    <field name='cap_litros'/>                                
                                    <field name='cap_toneladas'/>
                                    <field name='cap_personas'/>
                                    <field name='alto'/>
                                    <field name='ancho'/>
                                    <field name='largo'/>
                                    <field name='eje_direccional'/>
                                    <field name='eje_motriz'/>
                                    <field name='eje_carga'/>
                                    <field name='permiso_ruta'/>                  
                                    <field name='lugar_exp'/>
                                    <field name='fecha_exp'/>
                                    <field name='folio_tarjeta'/>
                                    <field name='fecha_tarjeta'/>
                                    <field name='folio_modalidad'/>
                                </group>
    						</page>
                            <page string='Documentacion' attrs="{'invisible': ['|','|',('state','in','borrador'),('state','in','disponible')]}">
                                <group>
                                    <separator string="Documentos" coslpan="4"/>
                                    <field name='document_ids' colspan="4" nolabel="1">
                                        <tree string='Documentacion'>
                                            <field name='name'/>
                                            <field name='unit_id' readonly="True"/>
                                            <field name='state'/>
                                            <button name="action_no_requerido" attrs="{'invisible':['|','|','|','|','|','|','|',('name','=','visual'),('name','=','carta'),('name','=','consulta'),('name','=','copia_tc'),('name','=','foto_frente'),('name','=','foto_chasis'),('name','=','foto_motor'),('state','!=','pendiente')]}" string="Completo" type="object" icon="gtk-cancel"/>
                                            <button name="action_completo" states="pendiente" string="Completo" type="object" icon="gtk-apply"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string='Referencias' attrs="{'invisible':['|',('state','=', 'disponible'),('state','=', 'borrador')]}">
                                <group col='4'>
                                    <field name='asignacion_id' attrs="{'invisible':[('asignacion_id','=', False)]}"/>
                                    <field name='reposicion_id' attrs="{'invisible':[('reposicion_id','=', False)]}"/>
                                    <field name='facturado' attrs="{'invisible':[('facturado','=', False)]}"/>
                                    <field name='factura_id' attrs="{'invisible':[('factura_id','=', False)]}"/>
                                    <field name='repuesta_id' attrs="{'invisible':[('repuesta_id','=', False)]}"/>
                                    <field name='sustituye_id' attrs="{'invisible':[('sustituye_id','=', False)]}"/>
                                    <field name='envio_id' attrs="{'invisible':[('envio_id','=', False)]}"/>
                                    <field name='guia' attrs="{'invisible':[('guia','=', False)]}"/>
                                    <field name='secretaria_id' attrs="{'invisible':[('secretaria_id','=', False)]}"/>
                                    <field name='paqueteria_id' attrs="{'invisible':[('paqueteria_id','=', False)]}"/>
                                    <field name='consulta' attrs="{'invisible':[('consulta','=', False)]}"/>
                                    <field name='tarjeta_circulacion' attrs="{'invisible':[('tarjeta_circulacion','=', False)]}"/>
                                    <field name='copia_tc' attrs="{'invisible':[('copia_tc','=', False)]}"/>
                                    <field name='chatarrera_id' attrs="{'invisible':[('chatarrera_id','=', False)]}"/>
                                    <field name='programacion_cita' attrs="{'invisible':[('programacion_cita','=', False)]}"/>
                                    <field name='cita_anterior' attrs="{'invisible':[('cita_anterior','=', False)]}"/>
                                    <field name='cita_anterior2' attrs="{'invisible':[('cita_anterior2','=', False)]}"/>
                                </group>
                            </page>
                            <page string='Log'>
                                <group col='4'>
                                    <field name='disponible_por' attrs="{'invisible':[('disponible_por','=', False)]}"/>
                                    <field name='fecha_disponible' attrs="{'invisible':[('fecha_disponible','=', False)]}"/>
                                    <field name='asignada_por' attrs="{'invisible':[('asignada_por','=', False)]}"/>
                                    <field name='fecha_asignada' attrs="{'invisible':[('fecha_asignada','=', False)]}"/>
                                    <field name='facturado_por' attrs="{'invisible':[('facturado_por','=', False)]}"/>
                                    <field name='fecha_facturado' attrs="{'invisible':[('fecha_facturado','=', False)]}"/>
                                    <field name='completo_por' attrs="{'invisible':[('completo_por','=', False)]}"/>
                                    <field name='fecha_completo' attrs="{'invisible':[('fecha_completo','=', False)]}"/>
                                    <field name='enviado_por' attrs="{'invisible':[('enviado_por','=', False)]}"/>
                                    <field name='fecha_enviado' attrs="{'invisible':[('fecha_enviado','=', False)]}"/>
                                    <field name='copia_tc_por' attrs="{'invisible':[('copia_tc_por','=', False)]}"/>
                                    <field name='fecha_copia_tc' attrs="{'invisible':[('fecha_copia_tc','=', False)]}"/>
                                    <field name='consulta_por' attrs="{'invisible':[('consulta_por','=', False)]}"/>
                                    <field name='fecha_consulta' attrs="{'invisible':[('fecha_consulta','=', False)]}"/>
                                    <field name='tc_por' attrs="{'invisible':[('tc_por','=', False)]}"/>
                                    <field name='fecha_tc' attrs="{'invisible':[('fecha_tc','=', False)]}"/>
                                    <field name='recibido_por' attrs="{'invisible':[('recibido_por','=', False)]}"/>
                                    <field name='fecha_recibido' attrs="{'invisible':[('fecha_recibido','=', False)]}"/>
                                    <field name='bloqueado_por' attrs="{'invisible':[('bloqueado_por','=', False)]}"/>
                                    <field name='fecha_bloqueado' attrs="{'invisible':[('fecha_bloqueado','=', False)]}"/>
                                    <field name='cita_por' attrs="{'invisible':[('cita_por','=', False)]}"/>
                                    <field name='fecha_cita' attrs="{'invisible':[('fecha_cita','=', False)]}"/>
                                    <field name='cita_reprogramada_por' attrs="{'invisible':[('cita_reprogramada_por','=', False)]}"/>
                                    <field name='fecha_cita_reprogramada' attrs="{'invisible':[('fecha_cita_reprogramada','=', False)]}"/>
                                    <field name='cita_reprogramada2_por' attrs="{'invisible':[('cita_reprogramada2_por','=', False)]}"/>
                                    <field name='fecha_cita_reprogramada2' attrs="{'invisible':[('fecha_cita_reprogramada2','=', False)]}"/>
                                    <field name='exp_enviado_por' attrs="{'invisible':[('exp_enviado_por','=', False)]}"/>
                                    <field name='fecha_exp_enviado' attrs="{'invisible':[('fecha_exp_enviado','=', False)]}"/>
                                    <field name='chatarrizado_por' attrs="{'invisible':[('chatarrizado_por','=', False)]}"/>
                                    <field name='fecha_chatarrizado' attrs="{'invisible':[('fecha_chatarrizado','=', False)]}"/>
                                    <field name='certificado_por' attrs="{'invisible':[('certificado_por','=', False)]}"/>
                                    <field name='fecha_certificado' attrs="{'invisible':[('fecha_certificado','=', False)]}"/>
                                    <field name='baja_por' attrs="{'invisible':[('baja_por','=', False)]}"/>
                                    <field name='fecha_baja' attrs="{'invisible':[('fecha_baja','=', False)]}"/>
                                    <field name='cancelado_por' attrs="{'invisible':[('cancelado_por','=', False)]}"/>
                                    <field name='fecha_cancelado' attrs="{'invisible':[('fecha_cancelado','=', False)]}"/>
                                    <field name='desestimiento_por' attrs="{'invisible':[('desestimiento_por','=', False)]}"/>
                                    <field name='fecha_desestimiento' attrs="{'invisible':[('fecha_desestimiento','=', False)]}"/>
                                    <field name='reposicion_por' attrs="{'invisible':[('reposicion_por','=', False)]}"/>
                                    <field name='fecha_reposicion' attrs="{'invisible':[('fecha_reposicion','=', False)]}"/>
                                </group>
                            </page>
    					</notebook>
    				</sheet>
    			</form>
    		</field>
    	</record>
        <!-- Menu Chatarra-->
        <menuitem id="chatarra_menu" name="Chatarra"/>
        <!-- Menu Chatarra/Unidades -->
        <menuitem id="chatarra_list_menu" name="Unidades" parent="chatarra_menu"/>
       <!-- Accion Chatarra/Unidades/Inventario -->
        <record id='action_chatarra_list' model='ir.actions.act_window'>
        	<field name='name'>Inventario</field>
            <field name="key2">tree_but_open</field>
            <field name="view_id" ref="chatarra_unit_tree"/>
        	<field name='res_model'>chatarra.unit</field>
        	<field name='view_type'>form</field>
        	<field name='view_mode'>tree,form</field>
        </record>
        <!-- Accion Chatarra/Unidades/Disponibles -->
        <record id='action_chatarra_disponibles' model='ir.actions.act_window'>
            <field name='name'>Unidades Disponibles</field>
            <field name='res_model'>chatarra.unit</field>
            <field name="view_id" ref="chatarra_unit_tree"/>
            <field name="domain">[('state','=','disponible')]</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree,form</field>
        </record>
        <!-- Accion Chatarra/Unidades/Asignadas -->
        <record id='action_chatarra_asignadas' model='ir.actions.act_window'>
            <field name='name'>Unidades Asignadas</field>
            <field name='res_model'>chatarra.unit</field>
            <field name="view_id" ref="chatarra_unit_tree"/>
            <field name="domain">[('state','=','asignada')]</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree,form</field>
        </record>
        <!-- Accion Chatarra/Unidades/Expediente Completo -->
        <record id='action_chatarra_expediente_completo' model='ir.actions.act_window'>
            <field name='name'>Expediente Completo</field>
            <field name='res_model'>chatarra.unit</field>
            <field name="view_id" ref="chatarra_unit_tree"/>
            <field name="domain">[('state','=','completo')]</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree,form</field>
        </record>
        <!-- Accion Chatarra/Unidades/Enviadas a SCT -->
        <record id='action_chatarra_enviadas_sct' model='ir.actions.act_window'>
            <field name='name'>Enviadas a SCT</field>
            <field name='res_model'>chatarra.unit</field>
            <field name="view_id" ref="chatarra_unit_enviado_sct_tree"/>
            <field name="domain">[('state','=','enviado')]</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree,form</field>
        </record>
        <!-- Accion Chatarra/Unidades/Recibidas de SCT -->
        <record id='action_chatarra_recibido' model='ir.actions.act_window'>
            <field name='name'>Recibidas de SCT</field>
            <field name='res_model'>chatarra.unit</field>
            <field name="view_id" ref="chatarra_unit_tree"/>
            <field name="domain">[('state','=','recibido')]</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree,form</field>
        </record>
        <!-- Accion Chatarra/Unidades/Bloqueadas -->
        <record id='action_chatarra_bloqueadas' model='ir.actions.act_window'>
            <field name='name'>Bloqueadas</field>
            <field name='res_model'>chatarra.unit</field>
            <field name="view_id" ref="chatarra_unit_tree"/>
            <field name="domain">[('state','=','bloqueado')]</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree,form</field>
        </record>
        <!-- Accion Chatarra/Unidades/Cita -->
        <record id='action_chatarra_cita' model='ir.actions.act_window'>
            <field name='name'>Cita</field>
            <field name='res_model'>chatarra.unit</field>
            <field name="view_id" ref="chatarra_unit_cita_tree"/>
            <field name="domain">[('state','=','cita')]</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree,form</field>
        </record>
        <!-- Menu Chatarra/Unidades/Inventario -->
        <menuitem id="chatarra_lists_menu" name="Inventario" parent="chatarra_list_menu" sequence="0"/>
        <!-- Menu Chatarra/Unidades/Inventario/Inventario -->
        <menuitem id="chatarra_inventario_menu" name="Inventario" parent="chatarra_lists_menu" action="action_chatarra_list" sequence="0"/>
        <!-- Menu Chatarra/Unidades/Inventario/Disponibles -->
        <menuitem id="chatarra_disponibles_menu" name="Disponibles" parent="chatarra_lists_menu" action="action_chatarra_disponibles" sequence="1"/>
        <!-- Menu Chatarra/Unidades/Inventario/Asignadas -->
        <menuitem id="chatarra_asignadas_menu" name="Asignadas" parent="chatarra_lists_menu" action="action_chatarra_asignadas" sequence="2"/>
        <!-- Menu Chatarra/Unidades/Inventario/Expediente completo -->
        <menuitem id="chatarra_expediente_completo_menu" name="Expediente completo" parent="chatarra_lists_menu" action="action_chatarra_expediente_completo" sequence="3" />
        <!-- Menu Chatarra/Unidades/Inventario/Enviadas a SCT -->
        <menuitem id="chatarra_enviadas_sct_menu" name="Enviadas a SCT" parent="chatarra_lists_menu" action="action_chatarra_enviadas_sct" sequence="4"/>
        <!-- Menu Chatarra/Unidades/Inventario/Recibido de SCT -->
        <menuitem id="chatarra_recibido_sct_menu" name="Recibido de SCT" parent="chatarra_lists_menu" action="action_chatarra_recibido" sequence="5"/>
        <!-- Menu Chatarra/Unidades/Inventario/Bloqueadas -->
        <menuitem id="chatarra_recibido_bloqueadas" name="Bloqueadas" parent="chatarra_lists_menu" action="action_chatarra_bloqueadas" sequence="5"/>
        <!-- Menu Chatarra/Unidades/Inventario/Cita -->
        <menuitem id="chatarra_cita_menu" name="Cita" parent="chatarra_lists_menu" action="action_chatarra_cita" sequence="6"/>
    </data>
</openerp>