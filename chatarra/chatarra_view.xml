<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Vista de Arbol de Marcas -->
    	<record model='ir.ui.view' id='chatarra_marca_tree'>
    		<field name='name'>chatarra_marca.tree</field>
    		<field name='model'>chatarra.marca</field>
    		<field name='type'>tree</field>
    		<field name='arch' type='xml'>
    			<tree string='Marcas' editable='bottom'>
    				<field name='name'/>
    				<field name='active'/>
    			</tree>
    		</field>
    	</record>
    	<!-- Vista de Arbol de Tipo -->
    	<record model='ir.ui.view' id='chatarra_tipo_tree'>
    		<field name='name'>chatarra_tipo.tree</field>
    		<field name='model'>chatarra.tipo</field>
    		<field name='type'>tree</field>
    		<field name='arch' type='xml'>
    			<tree string='Tipos' editable='buttom'>
    				<field name='name'/>
    				<field name='active'/>
    			</tree>
    		</field>
    	</record>
    	<!-- Vista de Arbol de Motivo de Reposicion -->
        <record model='ir.ui.view' id='chatarra_motivo_tree'>
            <field name='name'>chatarra_motivo.tree</field>
            <field name='model'>chatarra.motivo</field>
            <field name='type'>tree</field>
            <field name='arch' type='xml'>
                <tree string='Motivo de Reposicion' editable='buttom'>
                    <field name='name'/>
                    <field name='active'/>
                </tree>
            </field>
        </record>
        <!-- Vista de Formulario de Cita -->
        <record model='ir.ui.view' id='chatarra_cita_form'>
            <field name='name'>chatarra_cita.form</field>
            <field name='model'>chatarra.cita</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string='Cita'>
                    <h1>
                        <label string='Cita'/>
                    </h1>
                    <group col='4'>
                        <field name='fecha'/>
                        <field name='chatarrera_id' domain="[('categoria','=', 'chatarrera'),('is_company','=',True)]" context="{'default_categoria': 'chatarrera', 'default_customer': False, 'default_supplier': True, 'default_is_company': True,}"/>
                        <field name='unidad_id'/>
                    </group>
                    <group colspan="4">
                        <button string="Cancelar" special="cancel"/>
                        <button string="Aceptar" name="action_programar_cita" type="object"/>
                    </group>
                </form>
            </field>
        </record>
        <!-- Vista de Formulario Wizard Tarjeta -->
        <record model='ir.ui.view' id='wizard_tarjeta_form'>
            <field name='name'>wizard_tarjeta.form</field>
            <field name='model'>chatarra.tarjeta</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string='Tarjeta'>
                    <h1>
                        <label string='Tarjeta'/>
                    </h1>
                    <group col='4'>
                        <field name='folio'/>
                        <field name='unit_id'/>
                        <field name='fecha' on_change='onchange_date(fecha)'/>
                        <field name='modalidad'/>
                    </group>
                    <group colspan="4">
                        <button string="Cancelar" special="cancel"/>
                        <button string="Aceptar" name="recibir_tarjeta" type="object"/>
                    </group>
                </form>
            </field>
        </record>
        <!-- Menu Chatarra/Configuracion -->
        <menuitem id="chatarra_config_menu" name="Configuracion" parent="chatarra_menu"/>
        <!-- Accion Chatarra/Configuracion/Marcas -->
        <record id='action_chatarra_marca' model='ir.actions.act_window'>
        	<field name='name'>Lista de Marcas</field>
        	<field name='res_model'>chatarra.marca</field>
        	<field name='view_type'>form</field>
        	<field name='view_mode'>tree,form</field>
        </record>
        <!-- Accion Chatarra/Configuracion/Tipo -->
        <record id='action_chatarra_tipo' model='ir.actions.act_window'>
        	<field name='name'>Lista de Tipos</field>
        	<field name='res_model'>chatarra.tipo</field>
        	<field name='view_type'>form</field>
        	<field name='view_mode'>tree,form</field>
        </record>
        <!-- Accion Chatarra motivo -->
        <record id='action_chatarra_motivo' model='ir.actions.act_window'>
            <field name='name'>Motivo de Reposicion</field>
            <field name='res_model'>chatarra.motivo</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree,form</field>
        </record>
        <!-- Menu Chatarra/Configuracion/Marcas -->
        <menuitem id="chatarra_marca_menu" name="Marcas" parent="chatarra_config_menu" action="action_chatarra_marca"/>
        <!-- Menu Chatarra/Configuracion/Tipos -->
        <menuitem id="chatarra_tipo_menu" name="Tipo" parent="chatarra_config_menu" action="action_chatarra_tipo"/>
        <!-- Menu Chatarra/Configuracion/Motivo -->
        <menuitem id="chatarra_motivo_menu" name="Motivo de Reposicion" parent="chatarra_config_menu" action="action_chatarra_motivo"/>
    </data>
</openerp>