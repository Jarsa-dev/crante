<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model='ir.module.category' id='security_module_category'>
        	<field name='name'>Security</field>
        	<field name='sequence'>10</field>
        </record>
        <record id='visitor_log_group_manager' model='res.groups'>
        	<field name='name'>Visitor Manager</field>
        	<field name='category_id' eval='security_module_category'/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <record id='visitor_log_group_user' model='res.groups'>
            <field name='name'>Visitor User</field>
            <field name='category_id' eval='security_module_category'/>
        </record>
        <record id='vehicle_log_group_manager' model='res.groups'>
            <field name='name'>Vehicle Manager</field>
            <field name='category_id' eval='security_module_category'/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <record id='vehicle_log_group_user' model='res.groups'>
            <field name='name'>Vehicle User</field>
            <field name='category_id' eval='security_module_category'/>
        </record>
        <record id="shop_restriction_user" model="ir.rule">
            <field name="name">Restrict shops</field>
            <field ref="model_sale_shop" name="model_id"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('visitor_log_group_user'))]"/>
        </record>
        <record id="visitor_log_restriction_user" model="ir.rule">
            <field name="name">Restrict visitor log</field>
            <field ref="model_visitor_log" name="model_id"/>
            <field name="domain_force">[('shop_id.user_id.id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('visitor_log_group_user'))]"/>
        </record>
        <record id="vehicle_log_restriction_user" model="ir.rule">
            <field name="name">Restrict vehicle log</field>
            <field ref="model_vehicle_log" name="model_id"/>
            <field name="domain_force">[('shop_id.user_id.id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('vehicle_log_group_user'))]"/>
        </record>
    </data>
</openerp>